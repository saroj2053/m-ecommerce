<% layout('layout') -%>


<div class="jumbotron" id="navbar-gap" style="margin-top: 10px;">
    <div class="container">
        <h1 class="text-center">Find your favourite product</h1 class="text-center">
        <p class="text-center">Search many of Ecommerce's products</p>
        <div class="row">
            <div style="margin: 0 auto;" class="col-md-6 col-md-offset-3">
                <form method="POST" class="input-group col-md-12">
                    <input type="text" id="search" class="form-control input-lg" name="search_item" placeholder="Search for a Product ...">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-secondary"><i class="fas fa-search"></i></button>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>

<h2 class="text-center my-3">Our Products</h2>
<div class="containerWrapper">
    <div class="productsWrapper">
    <% for (var i=0; i< products.length; i++) { %>
        <div class="productContainer">
            <p class="product__category">
               <%= products[i].category.name %>
            </p>
            <img style="width: 150px; height: 150px;" src="<%= products[i].image %>" alt="">

            <h2 class="mt-3">
                <%= products[i].name.substring(0, 35) %> ...
            </h2>
            <p class="mt-3"><i class="fas fa-euro-sign"></i>
                <strong><%= products[i].price %></strong>
            </p>
             
            <a class="btn btn-outline-info more-info mt-3" href="/product/<%= products[i]._id %>">More Info</a>
        </div>

        <% } %>
    </div>

</div>